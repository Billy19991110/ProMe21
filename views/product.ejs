<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("import.ejs") %>
    <link rel="stylesheet" type="text/css" href="/css/index.css">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <!-- <script type="text/javascript" src="/js/demo.js"></script> -->
    <style>
        .pic img{transform:scale(1,1);transition: all 1s ease-out;}
        .pic img:hover{transform:scale(1.2,1.2);}
        .font-weight-light{
            font-family: 'Kiwi Maru', serif;
            color: #545b6e;
        }
        .col-lg-5 p{
            font-family: 'Kiwi Maru', serif;
            color: #545b6e;
            font-weight: bold;
        }
        .btn{
        	background-color: #545b6e;
        	color: #f9f9f9;
        	font-size: 20px;
        	font-family: 'Kiwi Maru', serif;
        	font-weight: bolder;
        }
        .btn:hover{
        	background-color: #bee3db;
        	color: #545b6e;
        	font-weight: bolder;
        	font-family: 'Kiwi Maru', serif;
        }
        .text-pru{
            color: #545b6e;
        	font-weight: bolder;
        	font-family: 'Kiwi Maru', serif;
            font-size:25px;  
        }
        .card{
            border: 2px solid #545b6e;
            box-shadow: 2px 2px 10px   rgba(84, 91, 110,0.5);
        }
    </style>
</head>

<body>
    <%- include("header.ejs") %>

    <% for (var Item of product) { %>
    <!-- Responsive navbar-->
    <!-- <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container px-5">
            <a class="navbar-brand" href="#!"> title demo</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                
            </div>
        </div>
    </nav> -->
    <!-- Page Content-->
    <div class="container px-4 px-lg-5">
        <!-- Heading Row-->
        <div class="row gx-4 gx-lg-5 align-items-center my-5">
            <div class="col-lg-7 pic"><img  style="width: 75%;"  class=" rounded "  src=" <%= Item.pictureSeat1 %>  " alt="" alt="..." /></div>

            <div class="col-lg-5">
                <h3 class="font-weight-light"><%= Item.productName %></h3>
                <p><%= Item.Information %></p>
                <p>價格：<%= Item.productPrice %>元</p>
                <div >
                <form method="get" action="/shopp/:ID">
                    <select id="myoption" style="width: 25%; float: left; margin-right: 30px; margin-top: 5px; padding-bottom: 5px;" >
                    <script>
                           // option 選取數量
                        for (var i = 1; i < 99; i++) {
                            var content = "<option value='i' >" + i + "</option>";
                            // console.log(content);
                            document.getElementById("myoption").innerHTML +=content
                        }
                        </script>
                        <!-- <option >請選取數量</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>  -->
                    </select>
                    </form>
                </div>
                <a id="demo1" class="btn">加入購物車</a>
                <script>
                    $(function () {
                        document.getElementById("demo1").addEventListener("click", function () {
                            Swal.fire({
                                icon: "success",
                                color: "#545b6e",
                                title: "已加入購物車!",
                                text: "祝您購物愉快>.<",
                                confirmButtonColor: '#545b6e'
                            });
                            $('button:contains("OK")').click(function () {
                                location.href = "http://localhost:3000/shopp/<%= Item.productID %>"
                            })
                        })
                    });
                </script>
            </div>
        </div>
        <!-- Call to Action-->
        <div class="card   my-5 py-4 text-center">
            <div class="card-body"><p class="text-pru m-0">商品規格</p></div>
        </div>
        <!-- Content Row-->
        <div class="row gx-4 gx-lg-5">
            <div class="col-md-12 mb-5">
                <div class="card" style="width: 100%;">
                    <img class="card-img-top" src=" <%= Item.pictureSeat1 %> " alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text"></p>
                    </div>
                    </div>
            </div>
            <div class="col-md-12 mb-5">
                <div class="card" style="width: 100%;">
                    <img class="card-img-top" src=" <%= Item.pictureSeat2 %> " alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text"></p>
                    </div>
                    </div>
            </div>
            <div class="col-md-12 mb-5">
                <div class="card" style="width: 100%;">
                    <img class="card-img-top" src=" <%= Item.pictureSeat3 %> " alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text"></p>
                    </div>
                    </div>
            </div>
        </div>
    </div>
    <% } %>
    <!-- Footer-->
    <%- include("footer.ejs") %>


</body>






















</html>